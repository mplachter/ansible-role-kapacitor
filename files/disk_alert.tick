var disk = stream
    |from()
        .measurement('disk')
        .where(lambda: "path" == '/')
        .groupBy('host')
    |alert()
        .info(lambda: float("used") / float("total") * float(100) > 1)
        .warn(lambda: float("used") / float("total") * float(100) > 70)
        .crit(lambda: float("used") / float("total") * float(100) > 85)
        .stateChangesOnly()
        .log('/tmp/disk_alerts.log')
